<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/local/share/tsung/tsung-1.0.dtd" [] >
<tsung loglevel="notice">
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='100'/>
  </clients>

  <servers>
    <server host="localhost" port="3000" type="tcp"/>
  </servers>

  <load>
    <arrivalphase phase="1" duration="5" unit="second">
      <users arrivalrate="1" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="2" duration="5" unit="second">
      <users arrivalrate="2" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="3" duration="5" unit="second">
      <users arrivalrate="4" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="4" duration="5" unit="second">
      <users arrivalrate="8" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="5" duration="5" unit="second">
      <users arrivalrate="16" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="6" duration="5" unit="second">
      <users arrivalrate="32" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="7" duration="5" unit="second">
      <users arrivalrate="64" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="8" duration="5" unit="second">
      <users arrivalrate="128" unit="second"/>
    </arrivalphase>
  </load>


  <options>
    <option name="file_server" id="default" value="../data/users.csv"></option>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"/>
  </options>

  <sessions>
    <session name="fundamental_investor" probability="100" type="ts_http">

      <setdynvars sourcetype="file" fileid="default" delimiter="," order="iter">
        <var name="username"/>
        <var name="password"/>
        <var name="balance"/>
      </setdynvars>

      <setdynvars sourcetype="random_number" start="1" end="500">
        <var name="stock_id"/>
      </setdynvars>

      <!-- Homepage -->
      <request>
        <http url="/"
              method="GET"
        />
      </request>

      <!-- Log In -->
      <request>
        <http url="/login"
              method="GET"
        />
      </request>

      <transaction name="login">
        <request subst="true">
          <http url="/sessions.json"
                method="POST"
                content_type="application/json"
                contents="{&quot;name&quot;: &quot;%%_username%%&quot;, &quot;password&quot;: &quot;%%_password%%&quot;}"
          />
        </request>
      </transaction>

      <!-- Homepage -->
      <request>
        <http url="/"
              method="GET"
        />
      </request>

      <!-- Wait -->
      <thinktime value="5" random="true"/>

      <!-- View Stocks Page -->
      <transaction name="view_stocks_list">
        <request>
          <http url="/stocks"
                method="GET"
          />
        </request>
      </transaction>
      <!-- Wait -->
      <thinktime value="5" random="true"/>

      <!-- Buy Stock -->
      <transaction name="buy_stock">
        <request subst="true">
          <http url="/transactions"
                method="POST"
                content_type="application/json"
                contents="{&quot;stock_id&quot;: %%_stock_id%%, &quot;num_shares&quot;: 7, &quot;transaction_type&quot;: &quot;buy&quot;}"
          />
        </request>
      </transaction>

      <thinktime value="3" random="true"/>
      <transaction name="view_transaction_history">
        <request>
          <http url="/transactions"
                method="GET"/>
        </request>
      </transaction>

      <!-- Wait -->
      <thinktime value="5" random="true"/>


    </session>
  </sessions>
</tsung>
