<%= form_with(model: exchange) do |form| %>
  <% if exchange.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(exchange.errors.count, "error") %> prohibited this exchange from being saved:</h2>

      <ul>
        <% exchange.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.radio_button :exchange_type, 'deposit', :checked => true %>
    <%= label :exchange_type_deposit, 'Deposit' %>
    <%= form.radio_button :exchange_type, 'withdrawal' %>
    <%= label :exchange_type_withdrawal, 'Withdrawal'%>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
